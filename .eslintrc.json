{
    "root": true,
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "plugins": [
        "html"
    ],
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        // allow paren-less arrow functions
        "arrow-parens": 0,
        // allow async-await
        "generator-star-spacing": 0,
        // "key-spacing": [1, { "beforeColon": false, "afterColon": true }],   
        // "no-const-assign": 1,
        // "no-this-before-super": 1,
        "no-undef": 1,
        // "constructor-super": 1,
        // "valid-typeof": 1,
        "space-before-function-paren": 0,
        "no-debugger": 0,
        "no-unused-vars": 1
    }
}